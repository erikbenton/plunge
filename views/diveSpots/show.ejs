<%- layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/starability-basic.min.css">

<div class="row">
    <div class="col-12 col-md-6">
        <div class="card mb-3">
            <div id="diveSpotCarousel" class="carousel slide">
              <div class="carousel-inner">
                <% diveSpot.images.forEach((img, i) => { %>
                  <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <img src="<%= img.url %>" class="d-block w-100" alt="">
                  </div>
                <% }) %>
              </div>
              <% if (diveSpot.images.length > 1) { %>              
                <button class="carousel-control-prev" type="button" data-bs-target="#diveSpotCarousel" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#diveSpotCarousel" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              <% } %>
            </div>

            <div class="card-body">
              <h5 id="title" class="card-title"><%= diveSpot.title %></h5>
              <p id="description" class="card-text"><%= diveSpot.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li id="location" class="list-group-item text-secondary"><%= diveSpot.location %></li>
              <li id="avg-depth" class="list-group-item"><%= diveSpot.depth %> ft Avg Depth</li>
            </ul>
            <% if (currentUser && diveSpot.author.equals(currentUser._id)) { %>
              <div class="card-body">
                <a class="card-link btn btn-info" href="/diveSpots/<%= diveSpot._id %>/edit">Edit</a>
                <form class="d-inline" action="/diveSpots/<%= diveSpot._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
              </div>
            <% } %>
            <% if (typeof diveSpot.author !== "undefined") { %>
              <div class="card-footer">
                <p class="card-text">Submitted by <span id="author"><%= diveSpot.author.username %></span></p>
              </div>
            <% } %>
        </div>
    </div>
    <div class="col-12 col-md-6">

      <div id="map" class="mb-3"></div>

      <% if (currentUser) { %>
        <h2>Leave a Review</h2>
        <form action="/diveSpots/<%= diveSpot._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
          <fieldset class="starability-basic">
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div class="mb-3">
            <label class="form-label" for="body">Review Text</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
          </div>
          <button class="btn btn-success">Submit</button>
        </form>
      <% } %>
      <% for (let review of diveSpot.reviews) { %>
        <div class="card dive-spot-review-card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= review.author.username %></h5>
            <p class="starability-result" data-rating="<%= review.rating %>">
              Rated: <%= review.rating %> stars
            </p>
            <p class="card-text"><%= review.body %></p>
            <% if (currentUser && review.author.equals(currentUser._id)) { %>
              <form action="/diveSpots/<%= diveSpot._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
</div>

<!-- Show map script -->
<%-"<script>" %>
  const maptilerApiKey = "<%- process.env.NODE_ENV === "production" ? process.env.MAPTILER_CLIENT_API_KEY : process.env.MAPTILER_API_KEY %>"
  const diveSpot = <%- JSON.stringify(diveSpot) %>;
<%-"</script>" %>

<script src="/js/showMapPage.js"></script>