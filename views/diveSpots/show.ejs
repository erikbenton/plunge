<%- layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= diveSpot.image %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= diveSpot.title %></h5>
              <p class="card-text"><%= diveSpot.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-secondary"><%= diveSpot.location %></li>
              <li class="list-group-item"><%= diveSpot.depth %> ft Avg Depth</li>
            </ul>
            <% console.dir(currentUser) %>
            <% if (currentUser && diveSpot.author.equals(currentUser._id)) { %>
              <div class="card-body">
                <a class="card-link btn btn-info" href="/diveSpots/<%= diveSpot._id %>/edit">Edit</a>
                <form class="d-inline" action="/diveSpots/<%= diveSpot._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
              </div>
            <% } %>
            <% if (typeof diveSpot.author !== "undefined") { %>
              <div class="card-footer">
                <p class="card-text">Submitted by <%= diveSpot.author.username %></p>
              </div>
            <% } %>
        </div>
        <footer class="mb-3">
            <a href="/diveSpots">All dive spots</a>
        </footer>
    </div>
    <div class="col-6">
      <h2>Leave a Review</h2>
        <form action="/diveSpots/<%= diveSpot._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="rating">Rating</label>
            <input type="range" min="1" max="5" class="form-range" id="rating" name="review[rating]" />
          </div>
          <div class="mb-3">
            <label class="form-label" for="body">Review</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
          </div>
          <button class="btn btn-success">Submit</button>
        </form>
        <% for (let review of diveSpot.reviews) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">Rating: <%= review.rating %></h5>
              <p class="card-text"><%= review.body %></p>
              <form action="/diveSpots/<%= diveSpot._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        <% } %>
    </div>
</div>